<!-- views/therapist/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<% include ../partials/navigation.ejs %>

<header>
    <% include ../partials/header %>
</header>

<div class="content">
    <div class="content-heading">
        <div class="container container-full">
            <div class="row">
                <div class="col-lg-6 col-lg-push-3 col-sm-10">
                        <ul class="breadcrumb">
                            <li>
                                <a href="/"><span class="icon icon-home"></span>HOME</a>
                            </li>
                            <li>
                                <a href="/therapist">THERAPISTS</a>
                            </li>
                            <li class="active">
                                <a href="<%= "/schedule/" + therapistId + "/show" %>">SCHEDULE</a>
                            </li>
                        </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="content-inner">
        <div class="container container-full">

            <div class="row">
                <% for(var i = 0 ; i< model.length; i++) { %>
                <div class="col-lg-2 col-md-4">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <span class="week-description"><%= model[i].Day %></span>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <% for(var j = 0; j < model[i].periods.length; j++) { %>
                                <div class="col-md-12 text-center">
                                    <span class="time-description"><%= model[i].periods[j].desc%> </span>
                                </div>
                                <div class="col-md-12">
                                    <ul>
                                        <% for(var k = 0; k < model[i].periods[j].patients.length; k++) { %>
                                        <li><%= model[i].periods[j].patients[k].get('name') %></li>
                                        <% } %>
                                    </ul>
                                </div>

                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <% } %>
            </div>
        </div>
    </div>
</div>



<footer>
    <% include ../partials/footer %>
</footer>


<div class="fbtn-container">
    <div class="fbtn-inner">
        <a class="fbtn fbtn-red fbtn-lg waves-circle waves-effect waves-light" title="edit" href=<%= "/schedule/" +  therapistId + "/assign" %>>
            <span class="access-hide">修改</span>
            <span class="fbtn-ori icon icon-border-color"></span>
        </a>

    </div>
</div>

</body>
</html>